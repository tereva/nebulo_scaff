<p id="notice"><%= notice %></p>

<h1>Listing Appreciations</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Remark</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appreciations.each do |appreciation| %>
      <tr>
        <td><%= appreciation.content %></td>
        <td><%= appreciation.remark %></td>
        <td><%= appreciation.category.title %></td>
        <td><%= link_to 'Show', appreciation %></td>
        <td><%= link_to 'Edit', edit_appreciation_path(appreciation) %></td>
        <td><%= link_to 'Destroy', appreciation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appreciation', new_appreciation_path %>
<%= link_to 'New Category', new_category_path %>
